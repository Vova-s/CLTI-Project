@using Microsoft.AspNetCore.Components.Authorization
@using LoginPage.Client
@using LoginPage.Client.Shared
@using Microsoft.AspNetCore.Components.Routing

<!--
  CascadingAuthenticationState supplies the current authentication state
  to all descendant components.
-->
<CascadingAuthenticationState>
    <!-- Router for authorized routes using the app assembly -->
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <!--
              AuthorizeRouteView renders the page only if the user is authorized.
              Otherwise, it shows the NotAuthorized content.
            -->
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <!-- Redirect unauthorized users to the login page -->
                    <RedirectToLogin />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <!-- Layout for routes that are not found -->
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Сторінку не знайдено.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

